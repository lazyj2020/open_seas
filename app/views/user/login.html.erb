<h2>Log in</h2> 
<% form_for :user do |form| %> 
<fieldset> 
	<legend>Enter Your Details</legend> 

	<div class="form_row"> 
		<label for="account">Account:</label> 
		<%= form.text_field :account, :size => User::ACCOUNT_SIZE, 
							:maxlength => User::ACCOUNT_MAX_LENGTH %> 
	</div> 

	<div class="form_row"> 
		<label for="password">Password:</label> 
		<%= form.password_field :password, :size => User::PASSWORD_SIZE, 
								:maxlength => User::PASSWORD_MAX_LENGTH %> 
	</div> 
	
	<div class="form_row"> 
		<label for="remember_me">Remember Me?:</label>
		<%= form.check_box :remember_me %> 
	</div> 
	
	<div class="form_row"> 
		<%= submit_tag "Login", :class => "submit" %> 
	</div> 

</fieldset> 
<% end %> 

<p> 
	Not a member? <%= link_to "Register now", :action => "register" %> 
</p> 