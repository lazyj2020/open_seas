<h1>Editing ship</h1>

<% form_for(@ship) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :id %><br />
    <%= f.text_field :id %>
  </p>
  <p>
    <%= f.label :character_id %><br />
    <%= f.text_field :character_id %>
  </p>
  <p>
    <%= f.label :port_id %><br />
    <%= f.text_field :port_id %>
  </p>
  <p>
    <%= f.label :structure %><br />
    <%= f.text_field :structure %>
  </p>
  <p>
    <%= f.label :cargo %><br />
    <%= f.text_field :cargo %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

