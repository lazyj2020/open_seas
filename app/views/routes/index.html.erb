<h1>Listing routes</h1>

<table>
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Distance</th>
	<th>Route</th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%=h route.start.name %></td>
    <td><%=h route.end.name %></td>
    <td><%=h route.distance %></td>
	<td><%=h route.common_id %></td>
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New route', new_route_path %>